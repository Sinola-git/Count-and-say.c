#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* countAndSay(int n) {
    // Base case
    char* result = (char*)malloc(2 * sizeof(char));
    strcpy(result, "1");

    for (int i = 2; i <= n; i++) {
        char* prev = result;
        int len = strlen(prev);

        // Allocate enough space (safe upper bound)
        result = (char*)malloc(2 * len + 1);
        int index = 0;

        for (int j = 0; j < len; j++) {
            int count = 1;

            while (j + 1 < len && prev[j] == prev[j + 1]) {
                count++;
                j++;
            }

            // Append count and character
            index += sprintf(result + index, "%d%c", count, prev[j]);
        }

        result[index] = '\0';
        free(prev);
    }

    return result;
}
